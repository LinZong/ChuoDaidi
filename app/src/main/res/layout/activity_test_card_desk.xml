<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Android.Activity.InGameActivity"
        android:background="#000"
>
    <com.nemesiss.chuodaidi.Game.Component.Interact.CardDesk android:layout_width="match_parent"
                                                             android:layout_height="match_parent"
                                                             app:card_wh_ratio="0.714"
                                                             app:card_r1="0.24"
                                                             app:card_r2="0.257"
                                                             android:id="@+id/InGameCardDesk"
    >

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="95dp"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="80dp"
                      android:id="@+id/SelfPokeCollection"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal|bottom"
        >
        </LinearLayout>

        <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:id="@+id/LeftPlayerPokeCollection" android:layout_marginBottom="90dp"
                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="90dp"
                      app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="4dp"
                      android:orientation="vertical"
        />

        <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:id="@+id/RightPlayerPokeCollection"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
                      android:layout_marginBottom="90dp" app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginTop="90dp" app:layout_constraintTop_toTopOf="parent"
                      android:orientation="vertical"
        >
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="70dp"
                      android:id="@+id/TopPlayerPokeCollection"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal"
                      app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="120dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="120dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="70dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/SelfShowPokeCollection"
                      app:layout_constraintBottom_toTopOf="@+id/SelfPokeCollection"
                      app:layout_constraintStart_toStartOf="@+id/SelfPokeCollection"
                      app:layout_constraintEnd_toEndOf="@+id/SelfPokeCollection"
                      android:orientation="horizontal"
        >
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="70dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/LeftPlayerShowPokeCollection"
                      android:orientation="horizontal"
                      app:layout_constraintTop_toTopOf="@+id/LeftPlayerPokeCollection"
                      app:layout_constraintBottom_toBottomOf="@+id/LeftPlayerPokeCollection"
                      app:layout_constraintStart_toEndOf="@+id/LeftPlayerPokeCollection"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="70dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/RightPlayerShowPokeCollection"
                      android:orientation="horizontal"
                      app:layout_constraintEnd_toStartOf="@+id/RightPlayerPokeCollection"
                      app:layout_constraintTop_toTopOf="@+id/RightPlayerPokeCollection"
                      app:layout_constraintBottom_toBottomOf="@+id/RightPlayerPokeCollection">
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content" android:layout_height="70dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/TopPlayerShowPokeCollection"
                      android:orientation="horizontal"
                      app:layout_constraintTop_toBottomOf="@+id/TopPlayerPokeCollection"
                      app:layout_constraintEnd_toEndOf="@+id/TopPlayerPokeCollection"
                      app:layout_constraintStart_toStartOf="@+id/TopPlayerPokeCollection"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/SelfPokeControlPanel"
                      android:visibility="gone"
                      android:orientation="horizontal"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintBottom_toBottomOf="@+id/SelfShowPokeCollection"
                      android:layout_marginBottom="8dp">
            <Button
                    style="@style/WelcomeButtonStyle"
                    android:text="出牌"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PickCard"
                    android:layout_marginEnd="8dp"
            />
            <Button
                    style="@style/WelcomeButtonStyle"
                    android:text="清除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/PassCard"
                    android:layout_marginStart="8dp"
            />
        </LinearLayout>
        <TextView
                android:textColor="#fff"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@id/SelfShowPokeCollection"
                app:layout_constraintRight_toRightOf="@+id/SelfShowPokeCollection"
                android:textSize="24sp"
                android:text="不出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SelfNotShow" app:layout_constraintHorizontal_bias="0.522"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/SelfShowPokeCollection"/>
        <TextView
                android:textSize="24sp"
                android:visibility="gone"
                android:text="不出"
                android:textColor="#fff"
                app:layout_constraintTop_toTopOf="@id/LeftPlayerShowPokeCollection"
                app:layout_constraintBottom_toBottomOf="@id/LeftPlayerShowPokeCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LeftNotShow"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/LeftPlayerShowPokeCollection"
                android:layout_marginStart="24dp" android:layout_marginLeft="24dp"/>
        <TextView
                android:textSize="24sp"
                android:visibility="gone"
                android:text="不出"
                android:textColor="#fff"
                app:layout_constraintTop_toTopOf="@id/RightPlayerShowPokeCollection"
                app:layout_constraintBottom_toBottomOf="@id/RightPlayerShowPokeCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/RightNotShow"
                app:layout_constraintEnd_toStartOf="@+id/RightPlayerShowPokeCollection" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"/>

        <TextView
                android:textSize="24sp"
                android:visibility="gone"
                android:text="不出"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="@+id/TopPlayerShowPokeCollection"
                app:layout_constraintRight_toRightOf="@+id/TopPlayerShowPokeCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TopNotShow"
                android:layout_marginRight="24dp"
                app:layout_constraintHorizontal_bias="0.347"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/TopPlayerShowPokeCollection"/>
    </com.nemesiss.chuodaidi.Game.Component.Interact.CardDesk>

    <com.nemesiss.chuodaidi.Android.View.CountDownTextView android:layout_width="wrap_content"
                                                           android:id="@+id/countDownTextView"
                                                           android:textColor="#fff"
                                                           android:layout_height="wrap_content" android:textSize="24sp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginEnd="8dp"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginStart="8dp"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           android:layout_marginBottom="8dp"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_constraintVertical_bias="0.43"/>
</android.support.constraint.ConstraintLayout>