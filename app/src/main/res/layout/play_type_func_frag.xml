<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             style="@style/WelcomeStyle"
>

    <Button
            style="@style/WelcomeButtonStyle"
            android:text="PLAY WITH ROBOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Welcome_PlayWithRobot" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/WelcomeButtonStyle"
            android:text="PLAY WITH REMOTE PLAYER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Welcome_PlayWithRemotePlayer" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Welcome_PlayWithRobot" app:layout_constraintStart_toStartOf="@+id/Welcome_PlayWithRobot"
            app:layout_constraintEnd_toEndOf="@+id/Welcome_PlayWithRobot"/>

</android.support.constraint.ConstraintLayout>