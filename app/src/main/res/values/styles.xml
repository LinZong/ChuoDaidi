<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelcomeStyle" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>
    <style name="WelcomeTextViewStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WelcomeButtonStyle">
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:background">@drawable/welcome_btn_style</item>
        <item name="android:textColor">@drawable/welcome_btn_font_style</item>
    </style>

    <style name="InGameNickNameStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">#fff</item>
        <item name="android:popupBackground">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
